<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="FlowDocument Demostration" Height="200" Width="400">
    <Grid>
        <FlowDocumentScrollViewer IsToolBarVisible="True"
          Zoom="80" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph FontSize="36">Hola mundo!</Paragraph>
                <Paragraph FontStyle="Italic" TextAlignment="Left" FontSize="14" Foreground="purple">Bienvenidos a Manzanillo, solo calor y programacion!</Paragraph>
                <Paragraph FontStyle="Oblique" TextAlignment="Justify"
                           FontSize="14" Foreground="Gray">
                    ya regresate a la primaria Diego
                </Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Window>
